<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_500" /> <!-- Background color (white in this case) -->
        </shape>
    </item>

    <!-- Border (Stroke) -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
            android:color="@color/white" />
        </shape>
    </item>
</layer-list>
